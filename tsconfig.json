{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": "es6",
    "jsx": "react-native",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "types": [
      "jest"
    ]
  },
  "fileGlobs": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.js",
    "App.ts"
  ]
}